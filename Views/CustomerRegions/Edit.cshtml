@*model ManufacturaMVC.Models.CustomerRegions*@
@model ManufacturaMVC.ViewModels.CustomerCountryRegionVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>CustomerRegions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IdCustomerRegion" />
            <div class="form-group">
                <label asp-for="CustomerRegionName" class="control-label"></label>
                <input asp-for="CustomerRegionName" class="form-control" />
                <span asp-validation-for="CustomerRegionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerCountryName" class="control-label"></label>
                <select asp-for="CustomerCountryName" class="form-control" asp-items="ViewBag.CustomerCountryName"></select>
                <span asp-validation-for="CustomerCountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
