@*model IEnumerable<ManufacturaMVC.Dto.CustomerCountryRegionsDto*@
@model IEnumerable<ManufacturaMVC.ViewModels.CustomerCountryRegionVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCustomerRegion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerRegionName)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.CustomerCountryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCustomerRegion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerRegionName)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerCountryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCustomerRegion">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdCustomerRegion">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCustomerRegion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
